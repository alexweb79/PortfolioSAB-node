ul.skills-list
    li.skills-list__item
    .skills-row
        .skills-row__title Frontend
        ul.skills-row__list
            li.skills-row__item
                .skill
                - 
                    var skills = [
                        ['Html5', '75'],
                        ['CSS3', '65'],
                        ['JavaScript & jQuery', '35'],
                        ['Vue.js', '10'],
                    ]
                each skill in skills
                    .skill__circle
                        .skill__title #{skill[0]}
                        svg(class="circles" viewBox="0 0 110 110")
                            circle(r="45" cx="50%" cy="50%" fill="none" class="circle__first")
                            circle(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)" class=`circle__second circle-${skill[1]}`)
